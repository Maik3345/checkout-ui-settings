{
  "name": "checkout-ui-settings",
  "version": "0.0.1",
  "scripts": {
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch --emptyOutDir",
    "test:watch": "vitest --coverage",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "prepare": "npx husky"
  },
  "dependencies": {
    "jotai": "^2.12.5",
    "preact": "^10.16.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@preact/preset-vite": "^2.10.1",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/preact-hooks": "^1.1.0",
    "@types/jquery": "^3.5.32",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "react": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
